{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<h1>User index</h1>
<div class"overflow-x-auto border-x border-t">
    <table class="table table-auto w-full my-5">
        <thead class="border-b">
            <tr class="bg-gray-100">
                <th class="text-left p-4 font-medium">Id</th>
                <th class="text-left p-4 font-medium">Name</th>
                <th class="text-left p-4 font-medium">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="border-b hover:bg-gray-50">
                <td class="p-4">{{ user.id }}</td>
                <td class="p-4">{{ user.name }}</td>
                <td class="p-4">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="py-2.5 px-5 mr-2 mb-2 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">edit</a>
                </td>
            </tr>
        {% else %}
            <tr class="border-b hover:bg-gray-50">
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<a href="{{ path('app_user_new') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Create new</a>
{% endblock %}
